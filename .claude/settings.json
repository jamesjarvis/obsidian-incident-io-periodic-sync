{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": {
					"toolName": "edit|write",
					"filePath": "\\.tsx?$"
				},
				"hooks": [
					{
						"type": "command",
						"command": "npm run lint 2>&1 | head -50"
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": {
					"toolName": "bash",
					"bashCommand": "git commit"
				},
				"hooks": [
					{
						"type": "command",
						"command": "npm run build && npm run lint && npm run test"
					}
				]
			}
		]
	}
}
